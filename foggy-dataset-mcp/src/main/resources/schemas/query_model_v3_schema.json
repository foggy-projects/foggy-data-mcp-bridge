{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "对指定模型执行数据查询（V3版本：支持内联聚合表达式，系统自动处理 groupBy）",
  "properties": {
    "model": {
      "type": "string",
      "description": "模型名称，如 TmsCustomerModel"
    },
    "payload": {
      "type": "object",
      "description": "查询参数",
      "properties": {
        "calculatedFields": {
          "type": "array",
          "description": "计算字段定义（复杂表达式或需指定 agg 时使用）",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "字段名称，在 columns 中引用" },
              "expression": { "type": "string", "description": "表达式，支持算术运算、函数(ABS,ROUND,COALESCE)、字段引用" },
              "agg": { "type": "string", "enum": ["SUM", "AVG", "MAX", "MIN", "COUNT"], "description": "聚合类型，groupBy 场景使用" }
            },
            "required": ["name", "expression"]
          }
        },
        "columns": {
          "type": "array",
          "items": { "type": "string" },
          "description": "查询列。支持内联聚合如 'sum(amount) as total'，系统自动处理 groupBy"
        },
        "slice": {
          "type": "array",
          "description": "过滤条件",
          "items": {
            "type": "object",
            "properties": {
              "field": { "type": "string", "description": "字段名" },
              "op": { "type": "string", "description": "操作符：=, !=, >, <, like, in, [], [), is null 等" },
              "value": { "description": "过滤值，is null/is not null 时不需要" },
              "link": { "type": "integer", "description": "1=AND(默认), 2=OR" },
              "children": { "type": "array", "description": "嵌套子条件", "items": { "$ref": "#/properties/payload/properties/slice/items" } }
            },
            "required": ["field", "op"]
          }
        },
        "orderBy": {
          "type": "array",
          "description": "排序规则。聚合场景下字段须在 columns 中",
          "items": {
            "type": "object",
            "properties": {
              "field": { "type": "string", "description": "排序字段" },
              "dir": { "type": "string", "enum": ["ASC", "DESC"] }
            },
            "required": ["field"]
          }
        },
        "groupBy": {
          "type": "array",
          "description": "分组配置（推荐用内联聚合，系统自动处理）",
          "items": {
            "type": "object",
            "properties": {
              "field": { "type": "string" },
              "agg": { "type": "string", "enum": ["MAX", "MIN", "SUM", "AVG", "COUNT", "PK"] }
            },
            "required": ["field"]
          }
        },
        "start": { "type": "integer", "default": 0, "description": "起始行号" },
        "limit": { "type": "integer", "default": 20, "description": "每页记录数" },
        "returnTotal": { "type": "boolean", "default": false, "description": "是否返回总记录数" }
      }
    },
    "mode": {
      "type": "string",
      "enum": ["execute", "validate"],
      "default": "execute",
      "description": "execute(执行), validate(仅验证)"
    }
  },
  "required": ["model", "payload"]
}
