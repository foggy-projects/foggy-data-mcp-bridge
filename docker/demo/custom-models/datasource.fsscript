/**
 * 外部模型数据源配置
 *
 * 用户需要在 .env 文件中配置以下环境变量：
 *   CUSTOM_DB_URL=jdbc:mysql://host.docker.internal:3306/your_db
 *   CUSTOM_DB_USER=your_user
 *   CUSTOM_DB_PASS=your_password
 *
 * 注意：Docker 容器内访问宿主机 MySQL，请使用 host.docker.internal
 */
import '@dataSourceFactory';

// 从环境变量读取数据库配置
export const customDb = dataSourceFactory.create({
    url: dataSourceFactory.env('CUSTOM_DB_URL'),
    username: dataSourceFactory.env('CUSTOM_DB_USER'),
    password: dataSourceFactory.env('CUSTOM_DB_PASS')
});
